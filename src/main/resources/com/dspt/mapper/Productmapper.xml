<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dspt.mapper.Productmapper">
    <select id="findAllProduct" resultType="Product">
        select * from product
    </select>
<select id="findTypeProduct" parameterType="string" resultType="Product">
    select * from product where type=#{type}
</select>
    <select id="findOneProduct" parameterType="string" resultType="Product">
        select * from product where id=#{id}
    </select>
</mapper>